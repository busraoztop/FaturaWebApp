@* controller den gelen modeli alırım *@
@model List<Fatura>

<table class="table table-hover table-striped-columns">
    <thead>
        <tr>
            <th>FATURA NO</th>
            <th>FATURA TARİHİ</th>
            <th>FATURA DURUMU</th>
        </tr>
    </thead>
    <tbody>
        @* gelen fatura listesi modelini dönerek ekranda gösteririm *@
        @foreach (var fatura in Model)
        {
            <tr>
                <td>@fatura.FaturaNo </td>
                <td>@fatura.FaturaTarihi</td>
                <td>@fatura.FaturaDurumu</td>
            </tr>
        }

    </tbody>
</table>
